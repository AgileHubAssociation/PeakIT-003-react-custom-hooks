{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.fontFamily": "'Dank Mono', Menlo, Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.wordBasedSuggestions": false,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "workbench.colorTheme": "Ayu Mirage Bordered",
    "workbench.iconTheme": "vscode-icons",
    "files.autoSave": "onWindowChange",
    "files.exclude": {
        "USE_GITIGNORE": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/coverage": true,
        "**/dist": true,
        "**/build": true,
        "**/.build": true,
        "**/.gh-pages": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": false
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.options": {
        "env": {
            "browser": true,
            "jest/globals": true,
            "es6": true
        },
        "parserOptions": {
            "ecmaVersion": 2019,
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "rules": {
            "no-debugger": "off"
        }
    },
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    }
}
